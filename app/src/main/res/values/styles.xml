<resources>

    <!-- Base application theme. -->
    <style title="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item title="colorPrimary">@color/colorPrimary</item>
        <item title="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item title="colorAccent">@color/colorAccent</item>
        <item title="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item title="windowActionBar">false</item>
        <item title="windowNoTitle">true</item>
        <item title="android:windowLightStatusBar">true</item>
    </style>


    <style title="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item title="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style title="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item title="android:background">@drawable/shape_dialog</item>
    </style>

    <style title="MyTheme" parent="AppTheme">
        <item title="android:windowBackground">@color/White</item>
    </style>
    <style title="AppTheme.NoActionBar">
        <item title="windowActionBar">false</item>
        <item title="windowNoTitle">true</item>
        <item title="colorPrimaryDark">@color/White</item>
        <item title="android:windowLightStatusBar">true</item>
        <item title="colorAccent">@color/colorAccent</item>

    </style>
    <style title="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style title="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
