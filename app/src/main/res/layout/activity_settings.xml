<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    tools:context=".Activities.SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:elevation="2dp"
        android:theme="@style/ToolbarStyle"
        app:title=" "
        app:titleTextColor="@color/GreyTitle">


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/muli_regular"
            android:text="@string/settings_to_account"
            android:textColor="@color/GreyTitle"
            android:textSize="17sp" />

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settingsPhoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_astronaut_profile_grey"
                app:civ_border_color="@color/White"
                app:civ_border_width="2dp" />


            <TextView
                android:id="@+id/settings_name_title"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:fontFamily="@font/heebo_bold"
                android:text="Dario"
                android:textAlignment="center"
                android:textColor="@color/GreyTitle"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/muli_regular"
                android:text="¿Qué tal tu día?"
                android:textAlignment="center"
                android:textColor="@color/GreyTitle"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/heebo_medium"
                    android:text="Nombre"
                    android:textAlignment="center"
                    android:textColor="@color/GreyTitle"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/settingsName"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/reg_edittext_style"
                    android:drawableStart="@drawable/ic_identify_user"
                    android:drawablePadding="10dp"
                    android:elevation="2dp"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/heebo_medium"
                    android:text="Email"
                    android:textAlignment="center"
                    android:textColor="@color/GreyTitle"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/settingsEmail"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/reg_edittext_style"
                    android:clickable="false"
                    android:drawableStart="@drawable/ic_email"
                    android:drawableEnd="@drawable/ic_lock"
                    android:drawablePadding="10dp"
                    android:elevation="2dp"
                    android:focusable="false"
                    android:inputType="none" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/heebo_medium"
                    android:text="Fecha de nacimiento"
                    android:textAlignment="center"
                    android:textColor="@color/GreyTitle"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/settingsCalendar"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/reg_edittext_style"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="10dp"
                    android:elevation="2dp"
                    android:inputType="datetime" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/heebo_medium"
                    android:text="Selecciona tu género:"
                    android:textAlignment="center"
                    android:textColor="@color/GreyTitle"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:buttonTint="@color/GreenTask"
                        android:fontFamily="@font/muli_light"
                        android:gravity="center"
                        android:text="Hombre" />

                    <RadioButton
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:buttonTint="@color/GreenTask"
                        android:fontFamily="@font/muli_light"
                        android:gravity="center"
                        android:text="Mujer" />
                </LinearLayout>

                <Button
                    android:id="@+id/settingsSave"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/reg_btn_green_style"
                    android:fontFamily="@font/heebo_bold"
                    android:text="Guardar"
                    android:textAllCaps="false"
                    android:textColor="@color/White"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/settings_download_data"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/reg_btn_pink_style"
                    android:fontFamily="@font/heebo_bold"
                    android:text="@string/download_data"
                    android:textAllCaps="false"
                    android:textColor="@color/White"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/settings_sing_out"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/reg_btn_white_style"
                    android:fontFamily="@font/heebo_bold"
                    android:text="@string/log_out"
                    android:textAllCaps="false"
                    android:textColor="@color/GreenTask"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>